---
import heroImage from '@assets/images/hero.png';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hey, me llamo <span class="text-orange">Sergio Lanchazo</span> y soy un desarrollador Back End que vive en Barcelona.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Learn more</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 ml-2 flex w-2/4 items-center justify-center rounded">
		<Image
			src={heroImage}
			alt="Coding girl"
			format="png"
			width={500}
			height={500}
			loading="eager"
		/>
	</div>
</section>
